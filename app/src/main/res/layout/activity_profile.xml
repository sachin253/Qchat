<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/black_user"
        android:layout_gravity="center"
        android:id="@+id/ProfileImageId"></ImageView>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/EmailTextViewId"
    android:text=" Email is:"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="10dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserNmaeIdTextViewId"
        android:text=" Name is:"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserIdTextViewId"
        android:text=" UserId is:"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"></TextView>

</LinearLayout>